<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app.LoginPage"
             Title="LoginPage"
             BackgroundColor="#151522"
             Padding="0"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <Grid Padding="25" RowSpacing="20">
            <!-- Main Content -->
            <VerticalStackLayout VerticalOptions="Center" Spacing="25">
                <!-- Logo Section -->
                <VerticalStackLayout Spacing="15" Margin="0,0,0,20">
                    <Frame CornerRadius="60" 
                           HeightRequest="120" 
                           WidthRequest="120" 
                           Padding="0"
                           IsClippedToBounds="True"
                           BackgroundColor="#252535"
                           BorderColor="Transparent"
                           HorizontalOptions="Center">
                        <Image Source="hranaslikalogo.png"
                               Aspect="AspectFill"/>
                    </Frame>
                    <Label Text="PTF"
                           TextColor="White"
                           FontSize="32"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label Text="RESTORAN"
                           TextColor="#FF4B55"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    
                </VerticalStackLayout>

                <!-- Login Section -->
                <VerticalStackLayout Spacing="15">
                    <!-- Username Entry -->
                    <Frame BackgroundColor="#252535"  
                           CornerRadius="25"
                           Padding="15,0"
                           HasShadow="False"
                           HeightRequest="50"
                           BorderColor="Transparent">
                        <Entry x:Name="UsernameEntry"
                               Placeholder="KorisniÄko ime"
                               FontSize="16"
                               TextColor="White"
                               BackgroundColor="Transparent"  
                               PlaceholderColor="#666676"/>
                    </Frame>

                    <!-- Password Entry -->
                    <Frame BackgroundColor="#252535"  
                           CornerRadius="25"
                           Padding="15,0"
                           HasShadow="False"
                           HeightRequest="50"
                           BorderColor="Transparent">
                        <Entry x:Name="PasswordEntry"
                               Placeholder="Lozinka"
                               FontSize="16"
                               TextColor="White"
                               BackgroundColor="Transparent"  
                               IsPassword="True"
                               PlaceholderColor="#666676"/>
                    </Frame>

                    <!-- Action Buttons -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,10">
                        <Button Grid.Column="0"
                                Text="Prijavi se"
                                FontSize="16"
                                BackgroundColor="#FF4B55"
                                TextColor="White"
                                HeightRequest="50"
                                CornerRadius="25"
                                Clicked="Button_Clicked"/>

                        <Button Grid.Column="1"
                                Text="Registruj se"
                                FontSize="16"
                                BackgroundColor="#252535"
                                TextColor="White"
                                HeightRequest="50"
                                CornerRadius="25">
                            <Button.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnRegisterTapped"/>
                            </Button.GestureRecognizers>
                        </Button>
                    </Grid>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>